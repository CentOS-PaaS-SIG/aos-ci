---
topology_name: "libvirt"
resource_groups:
  -
    resource_group_name: "ex"
    res_group_type: "libvirt"
    res_defs:

      - res_name: "fedoraati"
        res_type: "libvirt_node"
        uri: "qemu:///system"
        remote_user: "root"
        count: 1
        driver: qemu
        image_src: "{{ IMAGE_URL }}"
        memory: 2048 
        vcpus: 1
        arch: x86_64
        copy_ssh_keys: true
        additional_storage: 15G
        cloud_config:
          users:
            - name: admin
              gecos: Admin User
              groups: wheel
              sudo: ALL=(ALL) NOPASSWD:ALL
              ssh-import-id: None
              lock_passwd: true
        networks:
          - name: default
